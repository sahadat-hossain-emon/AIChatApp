@model AIChatApp.Application.DTOs.ChatSummaryDto

<!-- Added id for the row so JS can move it between sections -->
<a id="chat-row-@Model.UserId"
   asp-controller="Chat" asp-action="ChatList" asp-route-userId="@Model.UserId"
   class="group flex items-center justify-between p-4 rounded-2xl transition-all duration-200 hover:bg-gray-50 border border-transparent hover:border-gray-100 relative">

    <div class="flex items-center space-x-4">
        <!-- Avatar -->
        <div class="relative">
            <img src="@(string.IsNullOrWhiteSpace(Model.ProfileImageUrl)
                             ? Url.Content("~/images/default-image.png")
                             : Model.ProfileImageUrl)"
                 alt="@Model.FullName"
                 class="w-14 h-14 rounded-full object-cover border-2 border-white shadow-sm"
                 onerror="this.onerror=null;this.src='@Url.Content("~/images/default-image.png")';" />


            <!-- Added id and dynamic hidden class for SignalR -->
            <span id="unread-badge-@Model.UserId"
                  class="absolute -top-1 -right-1 flex h-5 w-5 items-center justify-center rounded-full bg-black text-[10px] font-bold text-white ring-2 ring-white @(Model.UnreadCount > 0 ? "" : "hidden")">
                @Model.UnreadCount
            </span>
        </div>

        <!-- Info -->
        <div class="flex flex-col">
            <h4 class="text-sm font-bold text-gray-900">@Model.FullName</h4>

            <!-- Added id and logic for bold font on unread messages -->
            <p id="message-preview-@Model.UserId"
               class="text-sm line-clamp-1 @(Model.UnreadCount > 0 ? "font-bold text-gray-950" : "text-gray-500")">
                @Model.LastMessage
            </p>
        </div>

        <!-- Hover Action Button -->
        <!-- Changed from <a> to <div> to avoid nested anchors (invalid HTML) -->
        <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-200 ml-2">
            <div class="inline-flex items-center justify-center h-9 w-9 rounded-full bg-black text-white shadow-sm">
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
            </div>
        </div>
    </div>

    <!-- Time -->
    <div class="text-right">
        <!-- Added id for time update -->
        <span id="message-time-@Model.UserId" class="text-xs text-gray-400">
            @if (Model.LastMessageAt.Date == DateTime.UtcNow.Date)
            {
                @Model.LastMessageAt.ToString("HH:mm")
            }
            else
            {
                @Model.LastMessageAt.ToString("MMM d")
            }
        </span>
    </div>
</a>