@model AIChatApp.Application.DTOs.ChatDto
@{
    Layout = "_ChatLayout";
    ViewData["Title"] = $"Chat with {Model.ChatUserFullName ?? Model.ChatUserName}";

    var displayName = Model.ChatUserFullName ?? Model.ChatUserName ?? "User";

    // Local default image (wwwroot)
    var defaultAvatar = Url.Content("~/images/default-image.png");

    // If user has uploaded an image use it, otherwise fallback to local default
    var profileImageSource = !string.IsNullOrWhiteSpace(Model.ChatUserProfileImage)
        ? Model.ChatUserProfileImage
        : defaultAvatar;
}


<!-- Main Wrapper: Centered 70% width on Desktop -->
<div class="fixed inset-0 bg-[#f8fafc] flex justify-center">
    <div class="w-full lg:max-w-5xl h-full flex flex-col bg-white shadow-2xl border-x border-gray-100 relative overflow-hidden">

        <!-- Chat Header -->
        <header class="flex-shrink-0 flex items-center justify-between px-6 py-4 bg-white/80 backdrop-blur-md border-b border-gray-100 z-30 sticky top-0">
            <div class="flex items-center gap-4">
                <a asp-controller="UserList" asp-action="UsersList"
                   class="group flex items-center justify-center w-10 h-10 rounded-xl hover:bg-indigo-50 transition-all duration-200">
                    <svg class="w-6 h-6 text-gray-500 group-hover:text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 19l-7-7 7-7" />
                    </svg>
                </a>

                <div class="flex items-center gap-3">
                    <div class="relative group cursor-pointer">
                        <div class="absolute inset-0 bg-indigo-200 rounded-full blur group-hover:blur-md transition-all"></div>
                        <img src="@profileImageSource"
                             alt="@displayName"
                             class="relative w-11 h-11 rounded-full object-cover ring-2 ring-white"
                             onerror="this.onerror=null;this.src='@defaultAvatar';" />
                        <span id="userStatus"
                              class="absolute bottom-0 right-0 w-3.5 h-3.5 bg-gray-300 border-2 border-white rounded-full"></span>
                    </div>

                    <div class="flex flex-col">
                        <h2 class="text-[15px] font-bold text-gray-900 leading-tight">@displayName</h2>
                        <div class="flex items-center gap-1.5">
                            <span class="text-[11px] font-medium text-gray-400 uppercase tracking-tight">@@@Model.ChatUserName</span>
                            <span id="typingIndicator" class="hidden text-[11px] text-indigo-500 font-semibold animate-pulse italic">typing...</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex items-center gap-3">
                <button id="btnStartCall" class="flex items-center gap-2 px-4 py-2 bg-indigo-50 text-indigo-600 rounded-xl font-semibold text-sm hover:bg-indigo-100 transition-all active:scale-95" title="Voice Call">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                    <span class="hidden sm:inline">Call</span>
                </button>
            </div>
        </header>

        <!-- Messages Container -->
        <main id="chatMessages" class="flex-1 overflow-y-auto px-6 py-8 space-y-6 bg-[#f8fafc]/50">
            @if (Model.Messages != null && Model.Messages.Any())
            {
                @foreach (var message in Model.Messages)
                {
                    if (message.IsSentByCurrentUser)
                    {
                        <!-- Sent Message (Right) -->
                        <div class="flex justify-end animate-fadeIn" data-message-id="@message.Id">
                            <div class="max-w-[75%] group relative">
                                <div class="bg-indigo-600 text-white rounded-[20px] rounded-tr-[4px] px-4 py-3 shadow-lg shadow-indigo-200/50 hover:shadow-indigo-300/60 transition-all duration-300">

                                    @if (!string.IsNullOrWhiteSpace(message.AttachmentUrl))
                                    {
                                        <div class="mb-3 rounded-lg overflow-hidden border border-white/20">
                                            @if (message.AttachmentType == "image")
                                            {
                                                <a href="@message.AttachmentUrl" target="_blank">
                                                    <img src="@message.AttachmentUrl" alt="Image" class="max-w-full max-h-[350px] object-cover hover:scale-105 transition-transform duration-500" />
                                                </a>
                                            }
                                            else if (message.AttachmentType == "audio")
                                            {
                                                <div class="p-3 bg-white/10 backdrop-blur-sm">
                                                    <audio controls class="w-full h-8 brightness-90 filter">
                                                        <source src="@message.AttachmentUrl" type="audio/webm">
                                                    </audio>
                                                </div>
                                            }
                                            else
                                            {
                                                <a href="@message.AttachmentUrl" target="_blank" class="flex items-center gap-3 p-3 bg-white/10 hover:bg-white/20 transition-colors">
                                                    <div class="bg-white p-2 rounded-lg text-indigo-600 shadow-sm">
                                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                                                    </div>
                                                    <span class="text-xs font-semibold truncate max-w-[150px]">@message.OriginalFileName</span>
                                                </a>
                                            }
                                        </div>
                                    }

                                    @if (!string.IsNullOrEmpty(message.MessageContent))
                                    {
                                        <p class="text-[14px] leading-relaxed font-medium message-text-content">@message.MessageContent</p>
                                    }
                                </div>

                                <!-- Subtle Action Trigger -->
                                <button type="button" class="message-options-btn absolute -left-10 top-1/2 -translate-y-1/2 p-2 rounded-full hover:bg-gray-100 opacity-0 group-hover:opacity-100 transition-all text-gray-400" data-message-id="@message.Id">
                                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 8a2 2 0 110-4 2 2 0 010 4zm0 6a2 2 0 110-4 2 2 0 010 4zm0 6a2 2 0 110-4 2 2 0 010 4z" /></svg>
                                </button>

                                <div class="message-actions hidden absolute top-0 right-full mr-2 w-32 bg-white rounded-xl shadow-xl border border-gray-100 z-50 py-1">
                                    @* Changed IsNullOrEmpty to IsNullOrWhiteSpace to handle database nulls/empty strings better *@
                                    @if (string.IsNullOrWhiteSpace(message.AttachmentUrl))
                                    {
                                        <button type="button" class="w-full text-left px-4 py-2 hover:bg-gray-50 text-[13px] font-medium edit-message-btn" data-message-id="@message.Id">Edit</button>
                                    }
                                    <button type="button" class="w-full text-left px-4 py-2 hover:bg-gray-50 text-[13px] font-medium text-red-500 delete-message-btn" data-message-id="@message.Id">Delete</button>
                                </div>

                                <div class="flex items-center justify-end gap-2 mt-1.5 pr-1">
                                    <span class="text-[10px] font-bold text-gray-400">@message.SentAt.ToLocalTime().ToString("h:mm tt")</span>
                                    <span class="message-status" data-status="@(message.IsRead ? "seen" : "sent")">
                                        @if (message.IsRead)
                                        {
                                            <svg class="w-3.5 h-3.5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 13l4 4L23 7" /></svg>
                                        }
                                        else
                                        {
                                            <svg class="w-3.5 h-3.5 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" /></svg>
                                        }
                                    </span>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- Received Message (Left) -->
                        <div class="flex justify-start animate-fadeIn" data-message-id="@message.Id">
                            <div class="max-w-[75%] group">
                                <div class="bg-white border border-gray-100 rounded-[20px] rounded-tl-[4px] px-4 py-3 shadow-sm hover:shadow-md transition-all duration-300">

                                    @if (!string.IsNullOrWhiteSpace(message.AttachmentUrl))
                                    {
                                        <div class="mb-3 rounded-lg overflow-hidden bg-gray-50">
                                            @if (message.AttachmentType == "image")
                                            {
                                                <a href="@message.AttachmentUrl" target="_blank">
                                                    <img src="@message.AttachmentUrl" alt="Image" class="max-w-full max-h-[350px] object-cover hover:opacity-90" />
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="@message.AttachmentUrl" target="_blank" class="flex items-center gap-3 p-3 hover:bg-gray-100 transition-colors">
                                                    <div class="bg-white p-2 rounded-lg text-gray-500 border border-gray-100 shadow-sm">
                                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                                                    </div>
                                                    <span class="text-xs font-semibold text-gray-700 truncate max-w-[150px]">@message.OriginalFileName</span>
                                                </a>
                                            }
                                        </div>
                                    }

                                    @if (!string.IsNullOrEmpty(message.MessageContent))
                                    {
                                        <p class="text-[14px] text-gray-700 leading-relaxed font-medium">@message.MessageContent</p>
                                    }
                                </div>
                                <div class="flex items-center gap-2 mt-1.5 pl-1">
                                    <span class="text-[10px] font-bold text-gray-400">@message.SentAt.ToLocalTime().ToString("h:mm tt")</span>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
            else
            {
                <div class="flex items-center justify-center h-full">
                    <div class="text-center">
                        <div class="w-20 h-20 mx-auto mb-4 bg-indigo-50 rounded-3xl flex items-center justify-center">
                            <svg class="w-10 h-10 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                            </svg>
                        </div>
                        <h3 class="text-gray-900 font-bold text-lg">New Connection</h3>
                        <p class="text-gray-400 text-sm mt-1">Start a conversation with @displayName</p>
                    </div>
                </div>
            }
        </main>

        <!-- Input Section -->
        <footer class="flex-shrink-0 bg-white border-t border-gray-100 p-4 md:p-6 z-40">
            <!-- Attachment Preview -->
            <div id="attachmentPreview" class="hidden mb-4 p-3 bg-gray-50 rounded-2xl border border-dashed border-gray-200 animate-fadeIn">
                <div class="flex items-center gap-4">
                    <div class="relative">
                        <img id="previewImage" src="" class="hidden h-16 w-16 object-cover rounded-xl shadow-sm border border-white" />
                        <div id="previewFileIcon" class="hidden h-16 w-16 flex items-center justify-center bg-white rounded-xl border border-gray-100 text-indigo-500 shadow-sm">
                            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path></svg>
                        </div>
                        <button id="removeAttachmentBtn" class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full p-1 shadow-lg hover:scale-110 transition-transform">
                            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M6 18L18 6M6 6l12 12"></path></svg>
                        </button>
                    </div>
                    <div>
                        <p id="previewFileName" class="text-sm font-bold text-gray-700 truncate max-w-[200px]">filename.ext</p>
                        <p class="text-[10px] font-bold text-indigo-500 uppercase tracking-widest">Ready to upload</p>
                    </div>
                </div>
            </div>

            <!-- Voice Recording Overlay -->
            <div id="recordingArea" class="hidden absolute inset-x-0 bottom-0 bg-white/95 backdrop-blur-sm border-t border-gray-100 p-6 flex items-center justify-between z-50 animate-fadeIn">
                <div class="flex items-center gap-4">
                    <div class="flex items-center gap-1">
                        <span class="w-2 h-2 bg-red-500 rounded-full animate-ping"></span>
                        <span id="recordingTimer" class="font-mono text-lg font-bold text-gray-800">00:00</span>
                    </div>
                    <span class="text-sm font-medium text-gray-400">Recording Voice...</span>
                </div>
                <div class="flex gap-3">
                    <button id="cancelRecordingBtn" class="px-5 py-2 text-sm font-bold text-gray-500 hover:text-red-500 transition-colors">Discard</button>
                    <button id="stopRecordingBtn" class="px-6 py-2 bg-red-500 text-white rounded-full text-sm font-bold shadow-lg hover:bg-red-600 transition-all active:scale-95">Send Audio</button>
                </div>
            </div>

            <div class="flex items-end gap-3 max-w-4xl mx-auto">
                <input type="file" id="fileInput" class="hidden" accept="image/*,.pdf,.doc,.docx,.txt" />

                <div class="flex gap-1">
                    <button id="attachButton" class="p-3 text-gray-400 hover:text-indigo-600 hover:bg-indigo-50 rounded-xl transition-all" title="Attach file">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13" /></svg>
                    </button>
                    <button id="recordButton" class="p-3 text-gray-400 hover:text-red-500 hover:bg-red-50 rounded-xl transition-all" title="Record Audio">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" /></svg>
                    </button>
                </div>

                <div class="flex-1 relative">
                    <textarea id="messageInput"
                              rows="1"
                              class="w-full px-5 py-3 pr-12 bg-gray-50 border-none rounded-2xl focus:ring-2 focus:ring-indigo-500 focus:bg-white transition-all text-[14px] placeholder-gray-400 shadow-inner resize-none"
                              placeholder="Type a message..."
                              style="max-height: 120px; min-height: 48px;"></textarea>

                    <button class="absolute right-3 bottom-2.5 p-1.5 text-gray-400 hover:text-indigo-500 transition-colors">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                    </button>
                </div>

                <button id="sendButton"
                        class="flex-shrink-0 w-12 h-12 flex items-center justify-center bg-indigo-600 text-white rounded-2xl shadow-xl shadow-indigo-200 hover:bg-indigo-700 hover:shadow-indigo-300 transition-all active:scale-95 disabled:opacity-40">
                    <svg class="w-5 h-5 transform rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                    </svg>
                </button>
            </div>
        </footer>
    </div>
</div>

<!-- Hidden inputs for JS state -->
<input type="hidden" id="currentUserId" value="@Model.CurrentUserId" />
<input type="hidden" id="chatUserId" value="@Model.ChatUserId" />
<input type="hidden" id="chatUserFullName" value="@displayName" />

<!-- Modals -->
<div id="editMessageModal" class="fixed inset-0 z-[100] hidden">
    <div class="fixed inset-0 bg-gray-900/40 backdrop-blur-sm transition-opacity"></div>
    <div class="fixed inset-0 z-10 flex items-center justify-center p-4">
        <div class="bg-white rounded-3xl shadow-2xl w-full max-w-md overflow-hidden animate-fadeIn">
            <div class="p-6 border-b border-gray-50">
                <h3 class="text-lg font-bold text-gray-900">Edit Message</h3>
            </div>
            <div class="p-6">
                <input type="hidden" id="editMessageId" />
                <textarea id="editMessageInput"
                          class="w-full h-32 p-4 bg-gray-50 border-none rounded-2xl focus:ring-2 focus:ring-indigo-500 transition-all text-sm resize-none"
                          placeholder="Your message..."></textarea>
            </div>
            <div class="bg-gray-50 px-6 py-4 flex gap-3 justify-end">
                <button type="button" id="cancelEditBtn" class="px-5 py-2 text-sm font-bold text-gray-500 hover:bg-gray-100 rounded-xl transition-all">Cancel</button>
                <button type="button" id="saveEditBtn" class="px-6 py-2 bg-indigo-600 text-white rounded-xl text-sm font-bold shadow-lg hover:bg-indigo-700 transition-all">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<audio id="remoteAudio" autoplay></audio>

<!-- Call Modals -->
<div id="incomingCallModal" class="fixed inset-0 z-[110] hidden flex items-center justify-center bg-gray-900/60 backdrop-blur-md">
    <div class="bg-white rounded-[40px] shadow-2xl p-8 w-80 text-center animate-bounce-slight border border-white/20">
        <div class="relative w-24 h-24 mx-auto mb-6">
            <div class="absolute inset-0 bg-green-500/20 rounded-full animate-ping"></div>
            <img src="@profileImageSource" class="relative w-full h-full rounded-full object-cover ring-4 ring-white shadow-xl" />
        </div>
        <h3 class="text-xl font-black text-gray-900 mb-1">Incoming Call</h3>
        <p class="text-sm font-medium text-gray-400 mb-8">@displayName</p>

        <div class="flex justify-center gap-6">
            <button id="btnRejectCall" class="p-5 bg-red-50 text-red-500 rounded-full hover:bg-red-500 hover:text-white transition-all shadow-lg active:scale-90">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M6 18L18 6M6 6l12 12"></path></svg>
            </button>
            <button id="btnAcceptCall" class="p-5 bg-green-500 text-white rounded-full hover:bg-green-600 transition-all shadow-xl shadow-green-200 active:scale-90">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
            </button>
        </div>
    </div>
</div>

<div id="activeCallOverlay" class="fixed top-6 left-1/2 -translate-x-1/2 z-[120] hidden">
    <div class="bg-gray-900/90 backdrop-blur-md text-white px-6 py-3 rounded-2xl shadow-2xl flex items-center gap-6 border border-white/10">
        <div class="flex items-center gap-3">
            <span class="relative flex h-3 w-3">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
            </span>
            <span class="text-sm font-black tracking-tight uppercase">@displayName</span>
        </div>
        <button id="btnHangUp" class="p-2 bg-red-500 hover:bg-red-600 rounded-xl transition-all shadow-lg active:scale-95">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M6 18L18 6M6 6l12 12"></path></svg>
        </button>
    </div>
</div>

@section Scripts {
    <script src="~/lib/signalr/signalr.min.js"></script>
    <script src="~/js/chat.js"></script>
    <script src="~/js/call.js"></script>
}

@section Styles {
    <style>
        body {
            background-color: #f1f5f9;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(8px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes bounce-slight {
            0%, 100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-5px);
            }
        }

        .animate-fadeIn {
            animation: fadeIn 0.4s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        }

        .animate-bounce-slight {
            animation: bounce-slight 2s ease-in-out infinite;
        }

        #chatMessages::-webkit-scrollbar {
            width: 4px;
        }

        #chatMessages::-webkit-scrollbar-track {
            background: transparent;
        }

        #chatMessages::-webkit-scrollbar-thumb {
            background: #e2e8f0;
            border-radius: 10px;
        }

            #chatMessages::-webkit-scrollbar-thumb:hover {
                background: #cbd5e1;
            }

        @@media (max-width: 1024px) {
            .lg\:max-w-5xl {
                max-width: 100%;
                border: none;
            }
        }
    </style>
}
